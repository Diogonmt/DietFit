                Content="Dieta 2" />
        <Button x:Name="dieta3"
                Grid.Row="1"
                Margin="1259,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Dieta3" Click="dieta3_Click_1" />
        <Button x:Name="buttonpL"
                Grid.Row="1"
                Margin="589,544,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="Black"
                Click="buttonpL_Click"
                Content="Ver plano físico"
                Foreground="Black" />
        <Button x:Name="button"
                Grid.Row="1"
                Margin="753,544,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="#FF0C0C0C"
                Click="button_Click"
                Content="Histórico Plano Físico"
                Foreground="Black" />
        <TextBlock x:Name="textBlockIm"
                   Grid.Row="1"
                   Margin="648,354,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="20"
                   Text="Idade Metabólica"
                   TextWrapping="Wrap" />
        <TextBlock x:Name="textBlockiM"
                   Grid.Row="1"
                   Margin="648,402,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="20"
                   Text=""
                   TextWrapping="Wrap" />
        <TextBlock x:Name="textBlockIdM"
                   Grid.Row="1"
                   Margin="648,383,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text=""
                   TextWrapping="Wrap" />
        <Button x:Name="button1"
                Grid.Row="1"
                Margin="69,544,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="Black"
                Click="button1_Click"
                Content="Histórico Dados"
                Foreground="Black" />
        <Button x:Name="button2"
                Grid.Row="1"
                Margin="239,544,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="Black"
                Click="button2_Click"
                Content="Observações"
                Foreground="Black" />
        <Button x:Name="button3" Content="Historico Alimentar" HorizontalAlignment="Left" Margin="394,544,0,0" Grid.Row="1" VerticalAlignment="Top" Background="White" BorderBrush="Black" Foreground="Black" Click="button3_Click"/>
    </Grid>
</Page>
