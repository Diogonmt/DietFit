                   Height="39"
                   Margin="648,473,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="18.667"
                   Text=""
                   TextWrapping="Wrap" />
        <Button x:Name="dieta1"
                Grid.Row="1"
                Margin="1024,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="dieta1_Click"
                Content="Dieta 1" />
        <Button x:Name="dieta2"
                Grid.Row="1"
                Margin="1142,0,0,580"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
